<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">
   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/layout_name"
       android:layout_width="match_parent"
       android:layout_height="70dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       android:layout_marginTop="100dp"
       android:layout_marginHorizontal="10dp"
       >
       <TextView
           android:id="@+id/name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintStart_toStartOf="@id/layout_name"
           app:layout_constraintTop_toTopOf="@id/layout_name"
           android:textSize="15sp"
           android:text="이메일"/>

       <EditText
           android:id="@+id/sign_input_email"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="3dp"
           android:hint="이메일을 입력해주세요"
           app:layout_constraintTop_toBottomOf="@id/name"
           app:layout_constraintStart_toStartOf="@id/layout_name"/>
   </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_name">

        <TextView
            android:id="@+id/pwd"
            app:layout_constraintStart_toStartOf="@id/constraintLayout"
            app:layout_constraintTop_toTopOf="@id/constraintLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="비밀번호"></TextView>

        <EditText
            android:id="@+id/sign_innput_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:inputType="textPassword"
            android:hint="비밀번호를 입력해주세요"
            app:layout_constraintStart_toStartOf="@id/constraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/pwd"></EditText>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sex_input"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">
        <TextView
            android:id="@+id/sex_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="성별"
            app:layout_constraintStart_toStartOf="@+id/sex_input"
            app:layout_constraintTop_toTopOf="@+id/sex_input"


            />

        <EditText
            android:id="@+id/sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="여자면 0, 남자면 1 입력해주세요"
            app:layout_constraintStart_toStartOf="@+id/sex_input"
            app:layout_constraintTop_toBottomOf="@+id/sex_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sex_input"
        android:id="@+id/nickname">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nickname_text"
            android:text="닉네임"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/nickname"
            app:layout_constraintTop_toTopOf="@+id/nickname"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nickname_input"
            app:layout_constraintStart_toStartOf="@+id/nickname"
            app:layout_constraintTop_toBottomOf="@+id/nickname_text"
            android:hint="닉네임 입력해라"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nickname"
            android:layout_marginHorizontal="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/phone_text"
                android:text="전화번호"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/phone"
                app:layout_constraintTop_toTopOf="@id/phone"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/phone_input"
                app:layout_constraintTop_toBottomOf="@+id/phone_text"
                app:layout_constraintStart_toStartOf="@+id/phone"
                android:hint="전화번호입력"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/birth"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phone"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/birth_text"
                    android:textSize="15sp"
                    android:text="생년월일"
                    app:layout_constraintStart_toStartOf="@+id/birth"
                    app:layout_constraintTop_toTopOf="@+id/birth"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/birth_input"
                    android:hint="생년월일을 입력해주세요"
                    app:layout_constraintStart_toStartOf="@+id/birth"
                    app:layout_constraintTop_toBottomOf="@+id/birth_text"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>



    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/rect"
        android:layout_marginTop="30dp"
        android:text="SIGN UP"
        android:textSize="15sp"
        android:id="@+id/signup_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/birth"
        android:layout_marginHorizontal="10dp">


    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>

